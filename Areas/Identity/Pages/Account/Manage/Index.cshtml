@page
@model MyWebApp.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Профиль";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>
    @ViewData["Title"]
</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Please choose your username." />
                <label asp-for="Input.Name" class="form-label"></label>
            </div>

            <div class="form-group">
                <label asp-for="Input.RoleName">Ваша роль:</label>
                <input asp-for="Input.RoleName" class="form-control" readonly />
            </div>
            <p>



            </p>
            <button id="color-button" type="submit" class="w-100 btn btn-lg btn-primary">Сохранить</button>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}